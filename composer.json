{
    "name":                 "onurb/doctrine-yuml-bundle",
    "description":          "Symfony Bundle to visualize the mapping of your entities with Yuml",
    "keywords":             ["yuml", "mapping", "doctrine", "diagram", "graph", "uml", "bundle", "symfony"],
    "type":                 "symfony-bundle",
    "license":              "MIT",
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    "authors": [
        {
            "name":     "Bruno Heron",
            "email":    "herobrun@gmail.com"
        },
        {
            "name":     "Marco Pivetta",
            "email":    "ocramius@gmail.com"
        },
        {
            "name":     "Symfony Community",
            "homepage": "http://symfony.com/contributors"
        },
        {
            "name":     "Doctrine Project",
            "homepage": "http://www.doctrine-project.org/"
        }
    ],
    "require": {
        "php":                              ">=7.1.3",
        "doctrine/annotations":             "1.*",
        "doctrine/common":                  "~2.0",
        "doctrine/orm":                     "~2.0",
        "onurb/doctrine-metadata-grapher":  "^1.1.2",
        "symfony/config":                   "~4.2|~5.0",
        "symfony/console":                  "~4.0|~5.0",
        "symfony/dependency-injection":     "~4.0|~5.0",
        "symfony/framework-bundle":         "~4.0|~5.0",
        "symfony/http-foundation":          "~4.0|~5.0",
        "symfony/http-kernel":              "~4.0|~5.0",
        "symfony/profiler-pack":            "~1.0",
        "symfony/routing":                  "~4.0|~5.0",
        "symfony/yaml":                     "~4.0|~5.0"
    },
    "require-dev": {
        "ext-curl":                       "*",
        "squizlabs/php_codesniffer":      "^3.4",
        "doctrine/doctrine-bundle":       "^2.0",
        "phpunit/phpunit":                "^7.0",
        "mikey179/vfsstream":             "^2.0"
    },
    "autoload": {
        "psr-4":    { "Onurb\\Bundle\\YumlBundle\\": "lib/Onurb/Bundle/YumlBundle/" }
    },
    "autoload-dev": {
        "psr-4":    { "OnurbTest\\Bundle\\YumlBundle\\": "tests/OnurbTest/Bundle/YumlBundle" }
    },
    "extra": {
        "symfony": {
            "allow-contrib": "true"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml.dist",
        "cs": "phpcs --standard=PSR2 ./lib/ ./tests/OnurbTest/"
    }
}
